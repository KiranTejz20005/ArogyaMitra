# Copy to .env and fill in. Backend uses backend/.env; frontend uses frontend/.env.local

# Backend (also copy to backend/.env)
# On Render: set CORS_ORIGINS to your Vercel frontend URL (e.g. https://your-app.vercel.app)
SECRET_KEY=your-secret-key
DATABASE_URL=sqlite:///./arogyamitra.db
CORS_ORIGINS=http://localhost:3000
GROQ_API_KEY=

# Frontend (copy to frontend/.env.local)
# On Vercel: set NEXT_PUBLIC_API_URL to your Render backend (e.g. https://arogyamitra-657d.onrender.com)
NEXT_PUBLIC_API_URL=http://localhost:8000
API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
